# DoubleZero Oracle Environment Variables
# Copy this file to .envrc and fill in the values

# This is required to build doublezero
export SERVICEABILITY_PROGRAM_ID="program_id"

# === Data Fetcher Settings ===
# Required: RPC configuration
export DZ_RPC__URL="https://api.devnet.solana.com"
export DZ_RPC__COMMITMENT="finalized"  # Optional: defaults to finalized

# Required: Program IDs
export DZ_PROGRAMS__SERVICEABILITY_PROGRAM_ID="GYhQDKuESrasNZGyhMJhGYFtbzNijYhcrN9poSqCQVah"  # Devnet
# export DZ_PROGRAMS__SERVICEABILITY_PROGRAM_ID="DZtnuQ839pSaDMFG5q1ad2V95G82S5EC4RrB3Ndw2Heb"  # Testnet
export DZ_PROGRAMS__TELEMETRY_PROGRAM_ID="YOUR_TELEMETRY_PROGRAM_ID_HERE"

# Optional: Third-party API configuration
# export DZ_THIRD_PARTY__LATENCY_API_URL="https://api.example.com/latency"
# export DZ_THIRD_PARTY__API_KEY="your-api-key"

# === DB Engine Settings ===
# Optional: defaults are usually fine
# export DZ_DB__BATCH_SIZE="10000"
# export DZ_DB__MEMORY_LIMIT_MB="1024"

# === Metrics Processor Settings ===
# Optional: defaults are usually fine
# export DZ_METRICS__UPTIME_THRESHOLD="0.95"

# === Verification Generator Settings ===
# Optional: defaults are usually fine
# export DZ_VERIFICATION__HASH_ALGORITHM="sha256"
# export DZ_VERIFICATION__INCLUDE_RAW_DATA="false"

# === Rewards Calculator (Orchestrator) Settings ===
# Required: Reward pool configuration
export DZ_EPOCH__REWARD_POOL="1000000000"  # In smallest units

# Optional: General settings
export DZ_LOG_LEVEL="info"  # Options: trace, debug, info, warn, error
export DZ_DRY_RUN="true"    # Set to false for production
# export DZ_EPOCH__GRACE_PERIOD_SECS="21600"  # Default: 6 hours

